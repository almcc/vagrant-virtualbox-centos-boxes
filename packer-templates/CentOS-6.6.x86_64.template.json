{
  "provisioners": [
    {
      "type": "shell",
      "environment_vars" : ["HTTP_IP={{ .HTTPIP }}", "HTTP_PORT={{ .HTTPPort }}"],
      "scripts": [
        "scripts/CentOS-6.6.x86_64/setup.sh"
      ],
      "override": {
        "CentOS-6.6.x86_64": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "builders": [
    {
      "output_directory": "vms",
      "vm_name": "CentOS-6.6.x86_64",
      "name": "CentOS-6.6.x86_64",
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/CentOS-6.6.x86_64.kickstart.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "2342bc5ea72fc028972aa0f21cee28b4",
      "iso_checksum_type": "md5",
      "iso_url": "assets/CentOS-6.6-x86_64-netinstall.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_sha256": "9ab48f44ac26a6deb374cb5fe6bad103bbf4fdf5186140e2d40ebe48bd01f3ea",
      "guest_additions_url": "assets/VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{.BuildName}}.box"
    }
  ]
}
